@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

@if (!string.IsNullOrEmpty(Model.StatusMessage))
{
    <div class="alert alert-success">
        @Model.StatusMessage
    </div>
}

<table class="table table-striped">
    <thead>
    <tr>
        <th>Saved Game</th>
        <th>Description</th>
        <th>Players</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var conf in Model.Configurations)
    {
        <tr>
            <td>@conf.Name</td>
            <td>@($"{conf.BoardWidth}x{conf.BoardHeight}, win condition: {conf.WinCondition}, created at: {conf.CreatedAt}")</td>
            <td>@conf.Player1Name vs @conf.Player2Name</td>
            <td>
                <form method="get" asp-page="./GamePlay">
                    <input type="hidden" name="id" value="@conf.Id" />
                    <input type="hidden" name="player1Name" value="@conf.Player1Name" />
                    <input type="hidden" name="player2Name" value="@conf.Player2Name" />
                    <button type="submit" class="btn btn-primary btn-sm">Continue Game</button>
                </form>
            </td>
            <td>
            <form method="post" asp-page-handler="Delete" style="display:inline-block;">
                <input type="hidden" name="id" value="@conf.Id" />
                <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this game?');">Delete</button>
            </form>
            </td>
        </tr>
    }
    </tbody>
</table>